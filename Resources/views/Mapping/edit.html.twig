{% extends "AstinaRedirectManagerBundle::content_layout.html.twig" %}
{% trans_default_domain "AstinaRedirectManagerBundle" %}

{% block armb_content  %}
    <form action="{{ path('armb_edit_map', {id:map.id}) }}" method="post" {{ form_enctype(form) }} novalidate>
        {{ form_widget(form) }}
        {% if not map.hasAdvancedSettings %}
            <hr />
            <div class="control-group">
                <a href="#" data-action="toggle-advanced-fields">{{ 'form.toggle_advanced_fields' | trans }}</a>
            </div>
        {% endif %}
        <div class="form-actions">
            <input class="btn btn-primary" type="submit" value= "{{ "form.save" | trans }}" />
            <a href="{{ path('armb_homepage') }}" class="btn">{{ 'form.abort' | trans }}</a>
        </div>
    </form>
{% endblock %}
